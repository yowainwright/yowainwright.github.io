{
  "name": "Jeffry.in",
  "description": "Jeffry.in, Jeff Wainwright's blog",
  "version": "2.13.0",
  "author": "Jeff Wainwright <yowainwright@gmail.com> (jeffry.in)",
  "license": "MIT",
  "homepage": "https://github.com/yowainwright/yowainwright.github.io#readme",
  "main": "README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yowainwright/yowainwright.github.io"
  },
  "bugs": {
    "url": "https://github.com/yowainwright/yowainwright.github.io/issues"
  },
  "scripts": {
    "build": "bun run build:css && bun run build:search && next build && bun run build:rss",
    "build:search": "bun scripts/generate-search-data.ts",
    "build:local": "bun run build:css && next build && bun run build:og && bun run build:rss",
    "build:rss": "bun scripts/rss/index.ts",
    "build:css": "sass --style=compressed styles/main.scss public/assets/jeffry.in.css",
    "build:og": "bun scripts/og-analyze.ts && bun scripts/generate-og.ts",
    "build:og:analyze": "bun scripts/og-analyze.ts",
    "preview:og": "bun scripts/og-preview.ts",
    "dev": "next dev --port 34729",
    "format": "bunx prettier --write .",
    "lint": "bunx oxlint .",
    "lint:fix": "bunx oxlint --fix .",
    "prepare": "bun scripts/install-hooks.ts && bun run update && bun run maintain",
    "start": "next start",
    "update": "codependence --update",
    "maintain": "pastoralist"
  },
  "dependencies": {
    "@atproto/api": "0.18.9",
    "@automattic/social-previews": "3.0.0",
    "@giscus/react": "3.1.0",
    "@keystatic/core": "0.5.48",
    "@keystatic/next": "5.0.4",
    "@mdx-js/loader": "3.1.1",
    "@mdx-js/react": "3.1.1",
    "@next/mdx": "16.0.8",
    "@next/third-parties": "16.1.1",
    "@sentry/nextjs": "10.32.1",
    "firebase": "12.7.0",
    "fuse.js": "7.1.0",
    "lucide-react": "0.542.0",
    "next": "16.1.1",
    "next-mdx-remote": "5.0.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "recharts": "3.3.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@shikijs/colorized-brackets": "1.29.2",
    "@shikijs/rehype": "1.29.2",
    "@shikijs/transformers": "1.29.2",
    "@types/bun": "latest",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@vercel/og": "0.8.6",
    "codependence": "0.3.1",
    "gray-matter": "4.0.3",
    "pastoralist": "1.9.4",
    "pino": "10.1.0",
    "pino-pretty": "13.1.3",
    "playwright": "1.57.0",
    "rehype-stringify": "10.0.1",
    "remark-parse": "11.0.0",
    "remark-rehype": "11.1.2",
    "sanitize-filename": "1.6.3",
    "sass": "1.97.2",
    "unified": "11.0.5"
  },
  "private": true,
  "type": "module",
  "engines": {
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.0.0",
  "peerDependencies": {
    "typescript": "5.8.3"
  },
  "trustedDependencies": [
    "@next/swc",
    "@swc/core",
    "@swc/helpers"
  ],
  "pastoralist": {
    "security": {
      "enabled": true,
      "provider": "osv",
      "interactive": false,
      "autoFix": true,
      "severityThreshold": "high"
    }
  }
}
