{
  "name": "Jeffry.in",
  "description": "Jeffry.in, Jeff Wainwright's blog",
  "version": "2.13.0",
  "author": "Jeff Wainwright <yowainwright@gmail.com> (jeffry.in)",
  "license": "MIT",
  "homepage": "https://github.com/yowainwright/yowainwright.github.io#readme",
  "main": "README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yowainwright/yowainwright.github.io"
  },
  "bugs": {
    "url": "https://github.com/yowainwright/yowainwright.github.io/issues"
  },
  "scripts": {
    "build": "bun run build:css && next build",
    "build:sitemap": "next-sitemap",
    "build:css": "sass --style=compressed styles/main.scss public/assets/jeffry.in.css",
    "commit": "git-cz",
    "commit-msg": "commitlint --edit $1",
    "dev": "next dev",
    "format": "bunx prettier --write .",
    "lint": "bunx oxlint .",
    "lint:fix": "bunx oxlint --fix .",
    "prepare": "bun run update && bun run maintain",
    "pre-commit": "bun run build && bun run lint && bun run commit-msg",
    "start": "next start",
    "update": "codependence --update",
    "maintain": "pastoralist"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/@commitlint/prompt"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ]
    }
  },
  "dependencies": {
    "@mdx-js/loader": "3.1.1",
    "@mdx-js/react": "3.1.1",
    "@next/mdx": "16.0.1",
    "@next/third-parties": "16.0.1",
    "lucide-react": "0.542.0",
    "next": "16.0.1",
    "next-mdx-remote": "5.0.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "recharts": "3.3.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@commitlint/format": "20.0.0",
    "@eslint/js": "9.38.0",
    "@giscus/react": "3.1.0",
    "@shikijs/colorized-brackets": "1.29.2",
    "@shikijs/rehype": "1.29.2",
    "@shikijs/transformers": "1.29.2",
    "@shikijs/twoslash": "1.29.2",
    "@types/bun": "latest",
    "@types/node": "24.10.0",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "codependence": "0.3.1",
    "commander": "12.1.0",
    "commitizen": "4.3.1",
    "globals": "15.15.0",
    "gray-matter": "4.0.3",
    "husky": "9.1.7",
    "next-sitemap": "4.2.3",
    "pastoralist": "1.8.1",
    "react-helmet": "6.1.0",
    "rehype": "13.0.2",
    "rehype-raw": "7.0.0",
    "rehype-shiki": "0.0.9",
    "rehype-stringify": "10.0.1",
    "remark": "15.0.1",
    "remark-html": "16.0.1",
    "remark-parse": "11.0.0",
    "remark-rehype": "11.1.2",
    "sanitize-filename": "1.6.3",
    "sass": "1.93.3",
    "shiki": "1.29.2",
    "unified": "11.0.5"
  },
  "private": true,
  "type": "module",
  "engines": {
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.0.0",
  "peerDependencies": {
    "typescript": "5.8.3"
  },
  "trustedDependencies": [
    "@next/swc",
    "@swc/core",
    "@swc/helpers"
  ],
  "pastoralist": {
    "security": {
      "enabled": true,
      "provider": "osv",
      "interactive": false,
      "autoFix": true,
      "severityThreshold": "high"
    }
  }
}
